        <body xml:lang="it">
            <div type="letter-opener">
                <opener>
                    <lb xml:id="LL1.22_lb_1f1" n="1" facs="#LL1.22_line_1f1"/>
                    <dateline>
                        <s type="sentence" n="s01">
